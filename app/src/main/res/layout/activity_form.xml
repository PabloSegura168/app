<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUEVA INCIDENCIA"
            android:textColor="@color/neon_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/etTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TÃ­tulo del problema"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_text"
            android:backgroundTint="@color/neon_blue"
            android:minHeight="48dp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Describe quÃ© ha pasado..."
            android:textColor="@color/white"
            android:textColorHint="@color/gray_text"
            android:background="@drawable/card_background_rounded"
            android:padding="10dp"
            android:gravity="top"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel de Urgencia:"
            android:textColor="@color/gray_text_dark"
            android:layout_marginBottom="10dp"/>

        <RadioGroup
            android:id="@+id/rgUrgencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp">

            <RadioButton
                android:id="@+id/rbBaja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baja"
                android:textColor="@color/urgency_low"
                android:buttonTint="@color/urgency_low"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media"
                android:checked="true"
                android:textColor="@color/urgency_mid"
                android:buttonTint="@color/urgency_mid"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbAlta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alta"
                android:textColor="@color/urgency_high"
                android:buttonTint="@color/urgency_high"
                android:layout_weight="1"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnUbicacionIncidencia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ðŸ“ MARCAR UBICACIÃ“N"
            android:backgroundTint="@color/card_dark"
            android:textColor="@color/neon_blue"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txtCoordsIncidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UbicaciÃ³n no seleccionada"
            android:textColor="@color/gray_text"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GUARDAR REPORTE"
            android:backgroundTint="@color/neon_blue"
            android:textColor="@color/black_background"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnTomarFoto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ðŸ“· ADJUNTAR FOTO"
            android:backgroundTint="@color/card_dark"
            android:textColor="@color/neon_pink"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#222"
            android:visibility="gone"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>